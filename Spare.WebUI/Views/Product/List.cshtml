@using Store.Domain.Entitys
@using Spare.WebUI.Models
@using Spare.WebUI.HtmlHelpers

@model Spare.WebUI.Models.ProductListViewModel


@{
    ViewBag.Title = "Товары";
}

@foreach (var p in @Model.Products)
{
    <div class="well">
        <h3>
            <strong>@p.Name</strong>
            <span class="pull-right label label-primary">@p.Price.ToString("# eur")</span>
        </h3>
        <span class="lead">@p.Description</span>
    </div>
}
    <!-- for view links-->
    <div class="btn-group pull-right">
        @Html.PageLinks(Model.PaigingInfo, x => Url.Action("List", new { page = x }))  
    </div>


